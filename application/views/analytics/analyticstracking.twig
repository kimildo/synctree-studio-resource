{% set tracking_id = (tracking_id is defined) ? tracking_id : '' %}
{% if tracking_id is not empty %}
<!-- Global site tag (gtag.js) - Google Analytics -->
<script async src="//www.googletagmanager.com/gtag/js?id={{ tracking_id }}"></script>
<script>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());
    gtag('config', '{{ tracking_id }}');
</script>
{% endif %}