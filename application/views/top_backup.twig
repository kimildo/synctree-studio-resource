<header id="header">

    <div id="logo-group">
        <!-- PLACE YOUR LOGO HERE -->
        {#Synctree Studio V2.0#}
        <img src="{{ s3Endpoint }}/static/img/logo/synctree_logo_txt.png" alt="Synctree M">
        <!-- END LOGO PLACEHOLDER -->
    </div>

    {% if user_info['selected_app_id'] is not empty %}
    <!-- projects dropdown -->
    <div class="project-context">
        <span class="label">{{ dictionary["apps"]["title"] }}:</span>
        <span class="project-selector dropdown-toggle" data-toggle="dropdown">
            <span id="current_product">{{ user_info['selected_app_name'] }}</span> <i class="fa fa-angle-down"></i>
        </span>

        <!-- Suggestion: populate this list with fetch and push technique -->
        <ul class="dropdown-menu">
            {% for row in client_apps %}
            <li class="top-product-menu{% if row.seq == user_info['selected_app_id'] %}  active{% endif %}">
                <a href="javascript:void(0);" title="{{ row.name }}" data-app-id="{{ row.seq }}">{{ row.name }}</a>
            </li>
            {% endfor %}
            <li class="divider"></li>
            <li>
                <a href="/{{ dictionary.lang }}/console/apps#add"><i class="fa fa-plus-circle"></i> {{ dictionary['button']['add_app'] }}</a>
            </li>
        </ul>
        <!-- end dropdown-menu-->
    </div>
    <!-- end projects dropdown -->
    {% endif %}


    <!-- pulled right: nav area -->
    <div class="pull-right">

        <ul id="mobile-profile-img" class="header-dropdown-list hidden-xs padding-5">
            <li class="">
                <a href="#" class="dropdown-toggle no-margin userdropdown" data-toggle="dropdown" aria-expanded="false">
                    <img src="{{ s3Endpoint }}/static/img/avatars/male.png" alt="me" class="online">
                </a>
                <ul class="dropdown-menu pull-right">
                    <li>
                        <a href="/{{ dictionary["lang"] }}/admin/user/profile" title="user setting"
                           class="padding-10 padding-top-5 padding-bottom-5"><i class="fa fa-cog fa-lg"></i> Setting</a>
                    </li>
                    <li class="divider"></li>
                    <li>
                        <a href="/auth/signout" title="Sign Out" data-action="userLogout"
                           data-logout-msg="You can improve your security further after logging out by closing this opened browser"
                           class="padding-10 padding-top-5 padding-bottom-5"><i class="fa fa-sign-out fa-lg"></i> <strong><u>L</u>ogout</strong></a>
                    </li>
                </ul>
            </li>
        </ul>

        <!-- logout button -->
        <div id="logout" class="btn-header transparent pull-right">
            <span> <a href="/auth/signout" title="Sign Out" data-action="userLogout"
                      data-logout-msg="You can improve your security further after logging out by closing this opened browser"><i class="fa fa-power-off"></i></a> </span>
        </div>
        <!-- end logout button -->

        <!-- user setting button -->
        {#<div id="user_setting" class="btn-header transparent pull-right">
            <span> <a href="/{{ dictionary["lang"] }}/admin/user/profile" title="user setting" ><i class="fa fa-cog"></i></a> </span>
        </div>#}
        <!-- user setting button -->


        <!-- fullscreen button -->
        <div id="fullscreen" class="btn-header transparent pull-right">
            <span> <a href="javascript:void(0);" data-action="launchFullscreen" title="Full Screen"><i class="fa fa-arrows-alt"></i></a> </span>
        </div>
        <!-- end fullscreen button -->

        <!-- multiple lang dropdown : find all flags in the flags page -->
        <ul class="header-dropdown-list hidden-xs">
            <li>
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                    <img src="{{ s3Endpoint }}/static/img/blank.gif" class="flag flag-{% if dictionary['lang'] == 'EN' %}us{% else %}kr{% endif %}"
                         alt="{{ dictionary['button'][dictionary['lang']] }}">
                    <span> {{ dictionary['button'][dictionary['lang']] }} </span> <i class="fa fa-angle-down"></i>
                </a>
                <ul class="dropdown-menu pull-right">
                    <li {% if dictionary['lang'] == 'kor' %}class="active"{% endif %}>
                        <a class="choose-lang ko" href="javascript:void(0);"><img src="{{ s3Endpoint }}/static/img/blank.gif" class="flag flag-kr" alt="{{ dictionary['button']['ko'] }}"> {{ dictionary['button']['ko'] }}</a>
                    </li>
                    <li {% if dictionary['lang'] == 'eus' %}class="active"{% endif %}>
                        <a class="choose-lang en" href="javascript:void(0);"><img src="{{ s3Endpoint }}/static/img/blank.gif" class="flag flag-us" alt="{{ dictionary['button']['en'] }}"> {{ dictionary['button']['en'] }}</a>
                    </li>
                </ul>
            </li>
        </ul>
        <!-- end multiple lang -->

    </div>
    <!-- end pulled right: nav area -->

</header>