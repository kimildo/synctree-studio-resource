<div class="modal fade in" id="modal_sample_source" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog" style="width: 900px">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
                <h4 class="modal-title"><i class="fa fa-lg fa-fw fa-terminal"></i> Sample Code - Example Request </h4>
            </div>
            <div class="modal-body">
                <div class="widget-body padding-15 margin-top-10">

                    <div class="row">
                        <div class="col-md-12">
                            <a href="#" id="button_sample_code" style="display: block" class="btn btn-default btn-top dropdown-toggle padding-top-10" data-toggle="dropdown" aria-expanded="true">
                                Select Language
                            </a>
                            <ul class="dropdown-menu" style="margin-left: 13px;width: 95%;">
                            {% for type, type_text in sample_code_types %}
                                <li><a href="#" class="set-sample-language" data-snippet="{{ type }}" >{{ type_text }}</a></li>
                            {% endfor %}
                            </ul>
                        </div>
                    </div>
                    <div class="row">
                        <pre style="margin: 10px;"><code style="height:600px;overflow:hidden;" class="" id="biz_sample_source_code"></code></pre>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default btn-test-close" data-dismiss="modal"><i class="fa fa-ban"></i> {{ dictionary.button.close }}</button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div>

