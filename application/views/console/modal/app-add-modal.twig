<div class="modal fade in" id="modal_app_add" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
                <h4 class="modal-title"><i class="fa fa-lg fa-fw fa-puzzle-piece"></i> <span id="">Add</span> app</h4>
            </div>
            <div class="modal-body">
                <div class="widget-body no-padding">
                    <form class="smart-form" id="form_add_app" method="post" action="/console/apps/add">
                        <fieldset>
                            <section>
                                <label class="label">app Name</label>
                                <label class="input">
                                    <input type="text" id="app_name" name="app_name" required="required" maxlength="30"/>
                                </label>
                            </section>

                            <section>
                                <label class="label">Type</label>
                                <label class="input">
                                    <label class="select">
                                        <select id="app_type" name="app_type" required="required">
                                            <option value="">--- select type ---</option>
                                            <option value="1">BIZ</option>
                                            <option value="2">chatbot</option>
                                            <option value="3">page</option>
                                            <option value="4">iframe</option>
                                        </select> <i></i>
                                    </label>
                                </label>
                            </section>

                            <section>
                                <label class="label">Description</label>
                                <label class="input">
                                    <input type="text" id="app_desc" name="app_desc" maxlength="100" />
                                </label>
                            </section>
                        </fieldset>
                    </form>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal"><i class="fa fa-ban"></i> {{ dictionary.button.close }}</button>
                <button type="button" id="button_add_app_proceed" class="btn btn-primary"><i class="fa fa-plus"></i> {{ dictionary["button"]["add"] }}</button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div>